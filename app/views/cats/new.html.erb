
<h1> Add A New Cat </h1>

<form action="<%= cats_url %>" method="post">
  <label for="cat_name"> Name: </label>
  <input type="text" id="cat_name" name="cat[name]">
</br>

  <label for="cat_sex_female"> Female: </label>
  <input type="radio" id="cat_sex_female" name="cat[sex]" value="F">

  <label for="cat_sex_male"> Male: </label>
  <input type="radio" id="cat_sex_male" name="cat[sex]" value="M">
</br>

  <label for="cat_color"> Color: </label>
  <select id="cat_color" name="cat[color]">

    <option>Choose a Color</option>
    <option value="tabby">Tabby</option>
    <option value="tortoiseshell">Tortoiseshell</option>
    <option value="harlequin">Harlequin</option>
    <option value="tuxedo">Tuxedo</option>
    <option value="smoke">Smoke</option>
    <option value="black">Black</option>

  </select>
</br>

  <label for="cat_birth_date"> Birth Date: </label>
  <input type="date" id="cat_birth_date" name="cat[birth_date]">
</br>

  <label for="cat_description"> Description: </label>
  <textarea id="cat_description" name="cat[description]">
    Write about your cat!
  </textarea></br></br>

  <button>SUBMIT</button>

</form>
