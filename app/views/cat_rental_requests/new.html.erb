<h1> Request a Cat Rental! </h1>

<form action="<%=cat_rental_requests_url%>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label id="cat">Cat:</label>

  <select id="cat" name="cat_rental_request[cat_id]">
    <option value="">Choose a Cat!</option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"> <%= cat.name %> </option>
    <% end %>
  </select>

</br>

  <label id="start_date"> Start Date:</label>

  <input type="date" id="start_date"
  name="cat_rental_request[start_date]"
  value="<%= @cat_rental_request.start_date %>">

</br>

  <label id="end_date"> End Date:</label>
  <input type="date" id="end_date"
  name="cat_rental_request[end_date]"
  value="<%= @cat_rental_request.end_date %>">

</br>

  <button>Submit</button>

</form>
